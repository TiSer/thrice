= div_for note do
  .note_background
    %span.dateandoptions
      .post_date= "Posted #{time_ago_in_words(note.created_at)} ago"
      %div.wrote{:align=>"left"}="#{note.user.name} wrote:"
      -if note.user == current_user || current_user.is_admin?
        .del= link_to 'Delete', note_path(note), :method => :delete, :class => "delete", :remote => true
    %p
      %div{:align=>"left"}
        %b#note= note.body
