%div.index
  %b.title All notes.
  %br/

  %span Here you can left some notes.
  %span= "Today is #{day_to_word(Date.today.day)} and topic is:"
  %span.topic "The name of the game (of the group)"
  %br

  %div.paginate{:align => 'left'}= will_paginate @notes
  %br

  #notes
    = render :partial => @notes, :locals => { :list => true }

  /
  %div#notes
    -#@notes.each do |note|
      #%i.said="#{note.user.name} said:"

      %div#note
        %p.note_body=# note.body
        
        .post_date
          Note was left at
          =#note.created_at.to_s(:my_datetime)

  %br
  %div{:align => 'left'}= will_paginate @notes
  %br
  %hr
  %div{:align => 'left'}
    = form_for @note, :remote => true do |f|
      = render :partial => "form", :locals => {:f => f, :action => "new"}
